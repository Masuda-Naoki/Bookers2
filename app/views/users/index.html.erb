
<p id="notice"></p>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-3">
  <h2>User info</h2>
 <%= image_tag @user.get_profile_image(100,100) %>
<table class="table">
 <tbody>
 <tr>
  <th>name</th>
  <th><%= @user.name %></th>
 </tr>
 <tr>
  <th>introduction</th>
  <th> <%= @user.introduction %></th>
   </tr>
   </tbody>
   </table>
    <button type="button" class="btn btn-outline-secondary btn-block">
  <%= link_to edit_user_path(current_user.id) do %>
   <i class = "fas fa-user-cog"></i>
  <% end %>
  </button>
 <%= form_with model: @book_new, url: books_path, method: :post do |f| %>


        <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <nav>

        <%= f.submit 'Create Book' %>
        </nav>
        <% end %>
  </div>
 
  <div class="col-md-8 offset-md-1">
     <h2>Users</h2>
    <table class="table table-hover table-invers">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
    <table class="table table-hover table-inverse">

    <% @users.each do |user| %>
   <tr>
   <th> <%= image_tag @user.get_profile_image(100,100) %></th>
   <th><%= user.name %><th>
   <th><%= link_to"Show",user_path(user.id) %></th>
   </tr>
   <% end %>
   </table>
  </div>
  </div>
  </div>