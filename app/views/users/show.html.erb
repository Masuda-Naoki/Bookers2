<div class= "col-md-3">
  <h2>User info</h2>

<%= image_tag @user.get_profile_image(100,100) %>
  <h5>name</h5>
  <%= @user.name %>

  <h5>introduction</h5>
   <%= @user.introduction %>
   <br>
  <%= link_to"btn",edit_user_path(current_user.id) %>

  </br>

  <%= form_for(@book,  url: books_path) do |f| %>


        <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <nav>

        <%= f.submit 'Create Book' %>
        </nav>
        <% end %>
  </div>


  <div class= "col-md-8 offset-md-1">
     <h2>Books</h2>
    <table class="table table-hover table-invers">
  <thead>
    <tr>
      <th>title</th>
      <th>opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <table class="table table-hover table-inverse">

  <% @books.each do |book| %>
     <tr>
      <%= link_to user_path(book.user) do %>


      <% end %>
       <th> <%= image_tag @user.get_profile_image(100,100) %></th>
      <td><%= link_to book.title, book_path(book.id)%></td>
      <td><%= book.body %></td>
      </tr>
  <% end %>
   </table>
  </div>