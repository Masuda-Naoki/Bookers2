<div class= "col-md-3">
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>

</div>

  <h5>name</h5>
  <%= @user.name %>
  
  <h5>introduction</h5>
  <%= @user.introduction %>
    
  <%= link_to"btn",edit_user_path(current_user.id) %>

      
  <%= form_for(@book,  url: books_path) do |f| %>


        <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :opinion %>
        <nav>

        <%= f.submit 'Create Book' %>
        </nav>
        <% end %>
  </div>
  
 
  <div class= "col-md-8 offset-md-1">
     <h2>Users</h2>
    <table class="table table-hover table-invers">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
    <table class="table table-hover table-inverse">

    <% @users.each do |user| %>
   <tr>
 
   <th><%= user.name %><th>
   <th><%= link_to"Show",user_path(user.id) %></th>
   </tr>
   <% end %>
   </table>
  </div>