
<!DOCTYPE html>

  
<html class ="fontawesome-i2svg-activ fontawesome-i2svg-conplete">
  <head>
    
    <title>Bookers</title>
  
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
   <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
   
   <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class='navbar-brand'>
        <span>Bookers</span>
      </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
          <ul class="navbar-nav">
            
           <li><i class="fas fa-home"></i><%= link_to "Home", user_path(current_user.id),style: "color: white;" %></li>
            <li><i class="fas fa-users"></i><%= link_to "Users", "/users",style: "color: white;" %></li>
            <li><i class="fas fa-book-open"></i><%= link_to "Books", "/books",style: "color: white;" %></li>
            <li><i class="fas fa-sign-out-alt"></i><%= link_to "Logout", destroy_user_session_path, method: :delete,style: "color: white;" %></li>
　　　　　　 </li>　
          <% else %>
           
            <li><i class="fas fa-home"></i><%= link_to"Home",root_path,style: "color: white;" %></li>
            <li><i class="fas fa-link"></i><%= link_to"About","/home/about",style: "color: white;" %></li>
            <li><i class="fas fa-user-plus"></i><%= link_to"Sign up", "/users/sign_up",style: "color: white;" %></li>
            <li><i class="fas fa-sign-in-alt"></i><%= link_to"Login", "/users/sign_in",style: "color: white;" %></li>
            </li>
          <% end %>
        </ul>
      </nav>
      </div>
      </div>
      </nav>
    </header>
    
 <main>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  </main>

 <%= yield %>
 
    
  </body>
   <footer>
    
          <p>CopyRight Infratop.inc</p>
    
  </footer>
</html>